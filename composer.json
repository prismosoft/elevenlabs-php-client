{
    "name": "prismosoft/elevenlabs-php-client",
    "description": "ElevenLabs API client for PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ElevenLabs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ElevenLabs\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.4",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage"
    }
}
